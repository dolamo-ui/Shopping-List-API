{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",                // <-- Important!
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,             // <-- Allows `import express from 'express'`
    "verbatimModuleSyntax": false,       // <-- Must be false for CommonJS
    "skipLibCheck": true
  }
}
